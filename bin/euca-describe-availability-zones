import getopt, sys, os
from euca2ools import Euca2ool, Util, ConnectionFailed

usage_string = """
Shows information about availability zones.

euca-describe-availability-zones [--region region] [-h, --help] [--version] [--debug] [zone1 zone2...zoneN]

OPTIONAL PARAMETERS

--region			region to describe availability zones for

zone1 zone2...zoneN		zones to describe. 

"""


def usage():
    print usage_string
    Util().usage()
    sys.exit()

def version():
    print Util().version()
    sys.exit()

def display_zones(zones, zone_ids, region):
    for zone in zones:
        zone_string = '%s\t%s' % (zone.name, zone.state)
	if region:
	    zone_string += '\t%s' % region
	print 'AVAILABILITYZONE\t%s' % (zone_string)

def main():
    euca = None
    region = None
    try:
        euca = Euca2ool('', ['region=']) 
    except Exception, e:
	print e
        usage()
    for name, value in euca.opts:
	if name == '--region':
	    region = value
        elif name in ('-h', '--help'):
            usage()
	elif name == '--version':
	    version()

    debug = False

    if region:
	os.environ['EC2_URL'] = 'https://' + region + ".ec2.amazonaws.com"
    zone_ids = euca.process_args()
    try:
        euca_conn = euca.make_connection()
    except ConnectionFailed, e:
        print e.message
        sys.exit(1)

    try:
        zones = euca_conn.get_all_zones(zone_ids)
    except Exception, ex:
        euca.display_error_and_exit('%s' % ex)

    display_zones(zones, zone_ids, region)
if __name__ == "__main__":
    main()
 
