import getopt, sys, os
from euca2ools import Euca2ool, Util


TOOLS_VERSION = "1.2-31337"
API_VERSION = "2009-04-04"

usage_string = """
Shows the Euca2ools version

euca-version [-h, --help] [--debug]
"""


def usage():
    print usage_string
    sys.exit()

def version():
    print Util().version()
    sys.exit()

def display_tools_version():
    print '%s %s' % (TOOLS_VERSION, API_VERSION)

def main():
    euca = None
    try:
	euca = Euca2ool()
    except Exception, e:
	print e
        usage()
 
    for name, value in euca.opts:
        if name in ('-h', '--help'):
            usage()

    display_tools_version()

if __name__ == "__main__":
    main()
 
