import sys
from euca2ools import Euca2ool, Util, ConnectionFailed

usage_string = """
Cancels a previously submitted bundle task.

euca-cancel-bundle-task bundle_id [-h, --help] [--version] [--debug]

REQUIRED PARAMETERS

bundle_id			Identifier of the bundle task to be canceled.

OPTIONAL PARAMETERS

"""


def usage(status=1):
    print usage_string
    Util().usage()
    sys.exit(status)

def version():
    print Util().version()
    sys.exit()

def display_bundle(bundle):
    bundle_string = '%s\t%s\t%s\t%s\t%s\t%s\t%s' % (bundle.id, 
                                bundle.instance_id,
                                bundle.bucket, 
                                bundle.prefix,
                                bundle.state, 
                                bundle.start_time,
                                bundle.update_time)
    print 'BUNDLE\t%s' % (bundle_string)

def main():
    euca = None
    try:
	euca = Euca2ool()
    except Exception, e:
	print e
        usage()
 
    bundle_id = None

    for name, value in euca.opts:
        if name in ('-h', '--help'):
            usage(0)
	elif name == '--version':
	    version()

    for arg in euca.args:
        bundle_id = arg
	break

    if bundle_id:
        try:
            euca_conn = euca.make_connection()
        except ConnectionFailed, e:
            print e.message
            sys.exit(1)
	try:
	    bundle_task = euca_conn.cancel_bundle_task(bundle_id = bundle_id)
        except Exception, ex:
            euca.display_error_and_exit('%s' % ex)

	if bundle_task:
            display_bundle(bundle_task)
    else:
        if not bundle_id:
            print 'bundle_id must be specified.'
	usage(1)
if __name__ == "__main__":
    main()
 
