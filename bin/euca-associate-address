import getopt, sys, os
from euca2ools import Euca2ool, AddressValidationError, InstanceValidationError, Util, ConnectionFailed

usage_string = """
Associate an instance with a public IP address.

euca-associate-address -i, --instance instance_id
[-h, --help] [--version] [--debug] ip

REQUIRED PARAMETERS
	
-i, --instance			unique identifier for a running instance to associate the address with.

ip				IP address to associate. 

OPTIONAL PARAMETERS

"""


def usage():
    print usage_string
    Util().usage()
    sys.exit()

def version():
    print Util().version()
    sys.exit()

def main():
    euca = None
    try:
        euca = Euca2ool('i:', ['instance='])
    except Exception, e:
	print e
        usage()
 
    ip = None
    instance_id = None

    for name, value in euca.opts:
        if name in ('-i', '--instance'):
            instance_id = value
        elif name in ('-h', '--help'):
            usage()
	elif name == '--version':
	    version()
    
    try:
        euca_conn = euca.make_connection()
    except ConnectionFailed, e:
        print e.message
        sys.exit(1)

    for arg in euca.args:
        ip = arg
	break

    if ip and instance_id:
        try:
            euca.validate_address(ip)
	except AddressValidationError:
	    print 'Invalid address', ip
	    sys.exit(1)
	try:
	    euca.validate_instance_id(instance_id)
        except InstanceValidationError:
   	    print 'Invalid instance id' 
            sys.exit(1)

	try:
            return_code = euca_conn.associate_address(instance_id = instance_id,
						 public_ip = ip)
        except Exception, ex:
            euca.display_error_and_exit('%s' % ex)

	if return_code:
	    print 'ADDRESS\t%s\t%s' % (ip, instance_id)
    else:
	if not ip:
	    print 'ip must be specified'
	if not instance_id:
	    print 'instance id must be specified'
	usage()

if __name__ == "__main__":
    main()
 
