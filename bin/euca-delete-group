import getopt, sys, os
from euca2ools import Euca2ool, Util, ConnectionFailed

usage_string = """
Deletes a security group.

euca-delete-group [-h, --help] [--version] [--debug] group_name

REQUIRED PARAMETER

group_name 			unique name for a group to delete.

OPTIONAL PARAMETER

"""


def usage():
    print usage_string
    Util().usage()

def version():
    print Util().version()
    sys.exit()

def main():
    euca = None
    try:
        euca = Euca2ool()
    except Exception, e:
	print e
        usage()
 
    group_name = None

    for name, value in euca.opts:
        if name in ('-h', '--help'):
            usage()
	elif name == '--version':
	    version()
    
    for arg in euca.args:
        group_name = arg
	break

    if group_name:
        try:
            euca_conn = euca.make_connection()
        except ConnectionFailed, e:
            print e.message
            sys.exit(1)
        try:
	    return_code = euca_conn.delete_security_group(name = group_name)
        except Exception, ex:
            euca.display_error_and_exit('%s' % ex)

        if return_code:
            print 'GROUP\t%s' % (group_name)
    else:
    	print 'group_name must be specified'
	usage()
if __name__ == "__main__":
    main()
 
